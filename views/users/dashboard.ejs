<!DOCTYPE html>
<html lang="en">
  <%- include ("layouts/header", { title: "Index", href: "/asset/styling.css" }); %>
    <body>
      <h1>List of users: (<%= users.length %>)</h1>

       <div class="table-responsive-sm">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>username</th>
              <th>password</th>
              <th>role</th>
              <th class="d-print-none">
                <a class="btn btn-sm btn-success" href="/users/create">Add</a>
              </th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach ((i)=>  { %>
              <tr>
                <td><%= i.id %></td>
                <td><%= i.username %></td>
                <td><%= i.password %></td>
                <td><%= i.role %></td>
                <td class="d-print-none">
                  <a class="btn btn-sm btn-primary" href="/users/<%= i.id %>">Detail</a>
                  <a class="btn btn-sm btn-warning" href="/users/update/<%= i.id %>">Update</a>
                  <a class="btn btn-sm btn-danger" href="/users/delete/<%= i.id %>">Delete</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" 
              integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous">
      </script>
    </body>
</html>